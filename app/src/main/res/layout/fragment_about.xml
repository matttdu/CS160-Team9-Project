<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BinSight"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About this App"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BinSight helps users find nearby garbage/recycling bins and organize community cleanups."
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objectives"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_objectives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Show nearby bins\n• Encourage proper sorting\n• Enable community cleanups"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 9 (CS160 Section 02)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matthew Du\nHardeep Kainth\nJimmy Vu\nXing Yu Luo"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_open_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open GitHub Repo"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_email_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Team" />

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© 2025 CS160 Team 9 – BinSight"
            android:textAlignment="center"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
